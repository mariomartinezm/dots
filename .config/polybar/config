[colors]
background     = ${xrdb:XTerm*background}
foreground     = ${xrdb:XTerm*foreground}
color1         = ${xrdb:XTerm*color1}
color2         = ${xrdb:XTerm*color2}
color3         = ${xrdb:XTerm*color3}
color4         = ${xrdb:XTerm*color4}
color5         = ${xrdb:XTerm*color5}
color6         = ${xrdb:XTerm*color6}

[bar/main]
monitor = "LVDS1"
width = 100%
height = 30
offset-x = 0%
offset-y = 0%
radius = 0.0
bottom = true

font-0 = Gohu GohuFont:pixelsize=11;1
font-1 = Siji:pixelsize=10;1

background = ${colors.background}

modules-left = ewmh
modules-center = xwindow
modules-right = xbacklight memory battery volume time

tray-position    = right
tray-detached    = false
tray-scale       = 1.0
tray-maxsize     = 20
tray-padding     = 1
tray-background  = ${colors.background}

[module/ewmh]
type = internal/xworkspaces
pin-workspaces = true
enable-click = true
enable-scroll = false

icon-0 = "0;"
icon-1 = "1;"
icon-2 = "2;"
icon-3 = "3;"
icon-4 = "4;"
icon-5 = "5;"
icon-6 = "6;"
icon-7 = "7;"
icon-8 = "8;"
icon-9 = "9;"
icon-default= ""

format = <label-state>
border = 2
border-color = ${colors.color4}

label-active = %icon%
label-active-foreground = ${xrdb:XTerm*color2}
label-active-padding = 1

label-occupied = %icon%
label-occupied-foreground = ${xrdb:XTerm*color3}
label-occupied-padding = 1

label-empty = %icon%
label-empty-foreground = ${xrdb:XTerm*color4}
label-empty-padding = 1

[module/xwindow]
type = internal/xwindow
label = %title:0:40:...%
label-foreground = ${colors.color4}
label-background = ${colors.background}
label-padding = 2

[module/memory]
type = internal/memory
interval = 2
label = %percentage_used%%
format-prefix = " "
format-foreground = ${colors.color6}
format-background = ${colors.background}
format-padding = 1

[module/xbacklight]
type = internal/xbacklight

ramp-0 = ""
ramp-1 = ""
ramp-2 = ""

label = %percentage%%

format = <ramp> <label>
format-foreground = ${colors.color3}
format-background = ${colors.background}
format-padding = 1

[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1
full-at = 100

label-charging = %percentage%%
format-charging = <animation-charging> <label-charging>
format-charging-foreground = ${colors.color2}
format-charging-background = ${colors.background}
format-charging-padding = 1

format-discharging = <ramp-capacity> <label-discharging>
format-discharging-foreground = ${colors.color2}
format-discharging-background = ${colors.background}
format-discharging-padding = 1

label-full  = %percentage%%
format-full = <ramp-capacity> <label-full>
format-full-foreground = ${colors.color2}

ramp-capacity-0 = ""
ramp-capacity-1 = ""
ramp-capacity-2 = ""

animation-charging-0 = ""
animation-charging-1 = ""
animation-charging-2 = ""

[module/volume]
type = internal/alsa

format-volume = <ramp-volume> <label-volume>
format-volume-background = ${colors.background}
format-volume-foreground = ${colors.color5}
format-volume-padding = 1

format-muted-background = ${colors.background}
format-muted-foreground = ${colors.color1}
format-muted-padding = 1

label-muted = ""

ramp-volume-0 = ""
ramp-volume-1 = ""

[module/pulseaudio]
type                     = internal/pulseaudio
interval                 = 5

label-volume             = VOL %percentage%
format-volume            = <label-volume>
format-volume-background = ${xrdb:color0:#222}
format-volume-foreground = ${xrdb:foreground:#222}
format-volume-padding    = 1

label-muted              = MUTED
format-muted-background  = ${xrdb:color1:#222}
format-muted-foreground  = ${xrdb:background:#222}
format-muted-padding     = 1

click-right              = pavucontrol

[module/time]
type = internal/date
interval = 10
format-margin = 2

time = "%H:%M"
date = "%b %d"

label = %date%, %time%
label-foreground = ${colors.color4}
label-background = ${colors.background}

