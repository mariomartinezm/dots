set window-title-basename   "true"
set selection-clipboard     clipboard

set font                    "Noto Sans 10"

# Tokyonight color theme for Zathura
# Swaps Foreground for Background to get a light version if the user prefers

set default-fg 			    "#c0caf5"
set default-bg 			    "#1a1b26"

set completion-bg		    "#1a1b26"
set completion-fg		    "#c0caf5"
set completion-highlight-bg	"#414868"
set completion-highlight-fg	"#c0caf5"
set completion-group-bg		"#1a1b26"
set completion-group-fg		"#7aa2f7"

set statusbar-fg		    "#a9b1d6"
set statusbar-bg		    "#414868"
set statusbar-h-padding		10
set statusbar-v-padding		10

set notification-bg		    "#414868"
set notification-fg		    "#a9b1d6"
set notification-error-bg	"#f7768e"
set notification-error-fg	"#1a1b26"
set notification-warning-bg	"#e0af68"
set notification-warning-fg	"#1a1b26"
set selection-notification	"true"

set inputbar-fg			    "#c0caf5"
set inputbar-bg 		    "#1a1b26"

set recolor                 true
set recolor-lightcolor		"#1a1b26"
set recolor-darkcolor		"#c0caf5"

set index-fg			    "#c0caf5"
set index-bg			    "#1a1b26"
set index-active-fg		    "#c0caf5"
set index-active-bg		    "#414868"

set render-loading-bg		"#1a1b26"
set render-loading-fg		"#c0caf5"

set highlight-color		    "#7aa2f7"
set highlight-active-color	"#bb9af7"

#
# Startup options
#
set adjust-open width
