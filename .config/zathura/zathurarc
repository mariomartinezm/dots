set window-title-basename "true"
set selection-clipboard "clipboard"

map <C-i> recolor

#
# Floral color theme
#

set notification-error-bg       "#2E3440"
set notification-error-fg       "#BF616A"
set notification-warning-bg     "#2E3440"
set notification-warning-fg     "#BF616A"
set notification-bg             "#AEC59E"
set notification-fg             "#f9f9f9"

set completion-bg               "#F9F9F9"
set completion-fg               "#777575"
set completion-group-bg         "#F4EFEF"
set completion-group-fg         "#9ABDDD"
set completion-highlight-fg     "#f9f9f9"
set completion-highlight-bg     "#AAC7B3"

set index-bg                    "#f9f9f9"
set index-fg                    "#777575"
set index-active-bg             "#AAC7B3"
set index-active-fg             "#f9f9f9"

set inputbar-bg                 "#AAC7B3"
set inputbar-fg                 "#F9F9F9"
set statusbar-bg                "#AAC7B3"
set statusbar-fg                "#F9F9F9"

set highlight-color             "#EBCB8B"
set highlight-active-color      "#81A1C1"

set default-bg                  "#F9F9F9"
set default-fg                  "#3B4252"

set render-loading              true
set render-loading-fg           "#282a36"
set render-loading-bg           "#F9F9F9"

set recolor-lightcolor          "#AAC7B3"
set recolor-darkcolor           "#ECEFF4"

set recolor                     "false"
set recolor-keephue             "false"

#
# Startup options
#
set adjust-open width
set recolor false
